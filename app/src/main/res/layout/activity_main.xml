<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:weightSum="1"
    android:background="#fff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="車をあなたの安全のために"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:textColor="#000"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="277dp"
        android:layout_height="228dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/car_32" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location"
        android:id="@+id/locationDebug"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="危険を感じた時に振ってください"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:textColor="#000"
        android:textSize="20dp" />

    <Button
        style="?android:borderlessButtonStyle"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_stop_2x"
        android:drawablePadding="5dp"
        android:text="停止する"
        android:id="@+id/location_stop"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:id="@+id/shake_test"
        android:layout_gravity="center_horizontal" />

    <Button
        style="?android:borderlessButtonStyle"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_settings_2x"
        android:drawablePadding="5dp"
        android:text="設定"
        android:id="@+id/to_settings"
        android:textSize="20dp" />

</LinearLayout>
